<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timetableLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlePurpleWrite"
    android:orientation="vertical">


    <Button
        android:id="@+id/dateSelectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.reminder.view.RoundTimetableView
        android:id="@+id/roundTimetableView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/round_timetable_padding"
        android:layout_marginTop="@dimen/round_timetable_padding"
        android:layout_marginEnd="@dimen/round_timetable_padding"
        android:layout_marginBottom="@dimen/round_timetable_padding" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timeTableRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/titlePurpleWrite"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


</LinearLayout>